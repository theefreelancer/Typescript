//Primitive types include
boolean, string, number, symbol, null, undefined

function impossibleGuard(value: any){
  if(
    typeof value === "string" &&
    typeof value === "number"
  ){
    value;  //type never
  }
}

function loginMessage(): void{
  console.log("Welcome to our user portal!");
}// void may act on functions without a return value



